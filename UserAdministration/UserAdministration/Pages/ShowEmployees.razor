@page "/ShowEmployees"

@inherits UserAdministration.Data.Employee

<h3>ShowEmployees</h3>
<p>This component shows all Employees in our Database.</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Security Number</th>
            <th>Birthdate</th>
            <th>IsActive</th>
            <th>VacDays</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in employees)
        {
        <tr>
            <td>@employee.ID</td>
            <td>@employee.Firstname</td>
            <td>@employee.Lastname</td>
            <td>@employee.SocialSecurityNumber</td>
            <td>@employee.Birthdate</td>
            <td>@employee.IsActive</td>
            <td>@employee.VacDays</td>
        </tr>
        }
    </tbody>
</table>

@code {
    private List<UserAdministration.Data.Employee> employees = new List<UserAdministration.Data.Employee>();

    protected override async Task OnInitializedAsync()
    {
        employees = await Task.FromResult(UserAdministration.Data.Employee.ReadAllEmployees());
    }
}